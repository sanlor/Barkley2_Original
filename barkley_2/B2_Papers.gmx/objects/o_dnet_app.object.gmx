                    o_dnet_control.slider_y = 0;
                    with o_dnet_thread visible = true;
                    }
                    
                // You had apps open //
                else 
                    {
                    dnet_app_selected = -1;
                    activate_app = true;
                    }
                }
                
            // Posts don't exist, meaning you are in a subforum //
            else 
                {
                // You have NO apps open //
